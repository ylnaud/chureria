<!-- Sección Reservas -->
<section class="bg-gray-800 py-16 text-white" id="reservas">
  <div class="container mx-auto max-w-4xl px-4">
    <div class="mb-12 text-center">
      <h2 class="mb-4 text-3xl font-bold">Reserva tu Mesa</h2>
      <p class="text-xl">Garantiza tu espacio en nuestro restaurante</p>
    </div>
    <form class="space-y-6">
      <div class="grid gap-6 md:grid-cols-2">
        <div>
          <label for="reservation-name" class="mb-2 block font-medium">Nombre completo</label>
          <input
            type="text"
            id="reservation-name"
            class="w-full rounded-lg border border-gray-600 bg-gray-700 px-4 py-2 focus:ring-2 focus:ring-red-500 focus:outline-none"
            placeholder="Tu nombre"
            required
          />
        </div>
        <div>
          <label for="reservation-email" class="mb-2 block font-medium">Correo electrónico</label>
          <input
            type="email"
            id="reservation-email"
            class="w-full rounded-lg border border-gray-600 bg-gray-700 px-4 py-2 focus:ring-2 focus:ring-red-500 focus:outline-none"
            placeholder="tu@email.com"
            required
          />
        </div>
        <div>
          <label for="reservation-phone" class="mb-2 block font-medium">Teléfono</label>
          <input
            type="tel"
            id="reservation-phone"
            class="w-full rounded-lg border border-gray-600 bg-gray-700 px-4 py-2 focus:ring-2 focus:ring-red-500 focus:outline-none"
            placeholder="+34 123 456 789"
            required
          />
        </div>
        <div>
          <label for="reservation-date" class="mb-2 block font-medium">Fecha</label>
          <input
            type="date"
            id="reservation-date"
            class="w-full rounded-lg border border-gray-600 bg-gray-700 px-4 py-2 focus:ring-2 focus:ring-red-500 focus:outline-none"
            required
          />
        </div>
        <div>
          <label for="reservation-time" class="mb-2 block font-medium">Hora</label>
          <input
            type="time"
            id="reservation-time"
            class="w-full rounded-lg border border-gray-600 bg-gray-700 px-4 py-2 focus:ring-2 focus:ring-red-500 focus:outline-none"
            required
          />
        </div>
        <div>
          <label for="reservation-guests" class="mb-2 block font-medium">Número de personas</label>
          <select
            id="reservation-guests"
            class="w-full rounded-lg border border-gray-600 bg-gray-700 px-4 py-2 focus:ring-2 focus:ring-red-500 focus:outline-none"
            required
          >
            <option value="">Selecciona...</option>
            <option value="1">1 persona</option>
            <option value="2">2 personas</option>
            <option value="3">3 personas</option>
            <option value="4">4 personas</option>
            <option value="5">5 personas</option>
            <option value="6">6 personas</option>
            <option value="7">7 personas</option>
            <option value="8">8 personas</option>
            <option value="9">9 personas</option>
            <option value="10">10 personas</option>
            <option value="11">Más de 10 personas</option>
          </select>
        </div>
      </div>
      <div>
        <label for="reservation-notes" class="mb-2 block font-medium"
          >Notas adicionales (opcional)</label
        >
        <textarea
          id="reservation-notes"
          rows="3"
          class="auto-expand w-full resize-none overflow-hidden rounded-lg border border-gray-600 bg-gray-700 px-4 py-2 focus:ring-2 focus:ring-red-500 focus:outline-none"
          placeholder="Alergias, requerimientos especiales, etc."
        ></textarea>
      </div>
      <div class="pt-4 text-center">
        <button
          type="submit"
          class="rounded-lg bg-red-600 px-8 py-3 font-medium text-white transition-colors duration-300 hover:bg-red-700"
        >
          <i class="fas fa-calendar-check mr-2"></i>
          Confirmar Reserva
        </button>
      </div>
    </form>
  </div>
</section>
