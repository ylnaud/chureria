    <div class="grid gap-8 md:grid-cols-2">
      {% for plato in especialidades %} {{ components.card(plato) }} {% endfor %}
    </div>
  </div>
</section>
<!-- Sección Menú -->
{% import "macros/menu.njk" as macros %} {{ macros.menuTabs(menu) }}
